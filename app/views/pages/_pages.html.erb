<% pages.url = '/pages/' + pages.url %>
<% if !Pages.exists?(ancestry: pages.id )%>
	<li><%= link_to pages.menu, pages.url %></li>
<% else %>
	<% @subpages = Pages.where(ancestry: pages.id ).order(position: :desc) %>
	<li class="dropdown">
	  <a href=<%= pages.url %> class="dropdown-toggle disabled" data-toggle="dropdown">
	  	<%= pages.title %> 
	  	<b class="caret"></b>
	  </a>
	  <ul class="dropdown-menu">
	  	<%= render @subpages %> 
	  </ul>
	</li>
<% end %>